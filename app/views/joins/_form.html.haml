= form_for(@join) do |f|
  - if @join.errors.any?
    #error_explanation
      %h2
        = pluralize(@join.errors.count, "error")
        prohibited this join from being saved:
      %ul
        - @join.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .field
    = f.label :party_id
    %br/
    = f.number_field :party_id
  .actions
    = f.submit
