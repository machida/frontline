%h1 Listing tasks
%table
  %tr
    %th User
    %th Content
    %th State
    %th Start time
    %th End time
    %th
    %th
    %th
  - @tasks.each do |task|
    %tr
      %td= task.user_id
      %td= task.content
      %td= task.state
      %td= task.start_time
      %td= task.end_time
      %td= link_to 'Show', task
      %td= link_to 'Edit', edit_task_path(task)
      %td= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete
%br/
= link_to 'New Task', new_task_path
