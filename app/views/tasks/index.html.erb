<h1>Listing tasks</h1>

<table>
  <tr>
    <th>User</th>
    <th>Content</th>
    <th>State</th>
    <th>Start time</th>
    <th>End time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.user_id %></td>
    <td><%= task.content %></td>
    <td><%= task.state %></td>
    <td><%= task.start_time %></td>
    <td><%= task.end_time %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

